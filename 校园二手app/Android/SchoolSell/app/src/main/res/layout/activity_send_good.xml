<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sendgood"
    tools:context=".pages.SendGood">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入宝贝标题"
        android:gravity="center"
        android:textColor="#727272"
        android:background="#E4FFEB3B"
        android:id="@+id/sendgood_et_goodname"
        />
    <LinearLayout
        android:layout_height="450dp"
        android:layout_width="match_parent"
        android:id="@+id/line1"
        android:layout_below="@id/sendgood_et_goodname"
        android:background="#6BFFEB3B"
        android:orientation="vertical">
        <EditText
            android:id="@+id/sendgood_et_goodexpress"
            android:layout_width="match_parent"
            android:hint="描述一下你的宝贝"
            android:gravity="center"

            android:layout_height="420dp"
            android:textSize="20dp"
            android:textColor="#727272"

            android:layout_marginTop="-2dp" />

        <EditText

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#FFC107"
            android:hint="价钱"
            android:id="@+id/add_et_addprice"
            android:textColor="@color/actionsheet_red"
            android:gravity="center"
            android:textSize="20dp" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:src="@drawable/add_image"
        android:background="#00000000"
        android:id="@+id/sendgood_imbtn_addimg"
        android:layout_below="@id/line1"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sendgood_imbtn_addimg"
        android:background="#FFC107"
        android:id="@+id/add_btn_adgood"
        android:text="发布商品"/>

</RelativeLayout>