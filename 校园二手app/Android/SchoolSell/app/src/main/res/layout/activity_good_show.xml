<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/iv_head_portrait"
            app:srcCompat="@drawable/lunbo1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:textColor="#000000"
                android:id="@+id/tv_username"
                android:textSize="15sp"
                android:text="我是用户名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_location"
                android:textSize="12sp"
                android:text="发布于中北大学"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_price"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="3dp"
            android:text="￥"
            android:textColor="#ff4242" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="88.00"
            android:textColor="#ff4242" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_goodname"
        android:layout_below="@+id/layout_price"
        android:layout_marginTop="30dp"
        android:text="商品名字"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_expression"
        android:layout_below="@id/tv_goodname"
        android:layout_marginTop="30dp"
        android:text="商品描述"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_below="@id/tv_expression"
        android:id="@+id/good_image_list"
        android:layout_marginTop="30dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <Button
            android:background="#00000000"
            android:drawableTop="@drawable/zan"
            android:id="@+id/btn_zan"
            android:text="点赞"
            android:textColor="#8a8a8a"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_toRightOf="@id/btn_zan"
            android:background="#00000000"
            android:drawableTop="@drawable/comment"
            android:id="@+id/btn_comment"
            android:text="评论"
            android:textColor="#8a8a8a"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_toRightOf="@id/btn_comment"
            android:background="#00000000"
            android:drawableTop="@drawable/collect"
            android:id="@+id/btn_collect"
            android:text="收藏"
            android:textColor="#8a8a8a"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cart"
            android:background="#00000000"
            android:drawableTop="@drawable/cart"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:text="加入购物车"
            android:textColor="#8a8a8a"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>