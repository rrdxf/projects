<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="70dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/index_chargo_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/index_chargo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是标题"
        android:layout_toRightOf="@id/index_chargo_icon"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/index_chargo_express"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是说明"
        android:layout_toRightOf="@id/index_chargo_icon"
        android:textColor="#575656"
        android:textSize="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/index_chargo_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥xxx"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="300dp"
        android:textColor="#ff0000"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/touxiang"
        android:id="@+id/index_info_icon"
        android:layout_marginTop="30dp"
        app:riv_oval="true"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index_info_name"
        android:text="我是名字"
        android:layout_toRightOf="@id/index_info_icon"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"/>

</RelativeLayout>



</LinearLayout>